@model string?
@{
}

<div class="bg-div"></div>

<div class="modal-widow">
    <form class="modal-form" action="Authorization" method="post">
        <div class="modal-form-group">
            <img class="cancel" src="~/cancel.png" alt="cancel " />
        </div>
        <div class="modal-form-group">
            <p class="modal-form-title">
                Authorization
            </p>
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Login:
            </label>
            <input type="text" name="login" class="modal-form-input input" />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Password:
            </label>
            <input type="text" name="password" class="modal-form-input input" />
        </div>
        <div class="modal-form-group">
            <button type="submit" class="submit-btn">Enter</button>
        </div>

    </form>
</div>