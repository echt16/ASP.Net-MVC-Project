@model WorkerAdditionalViewModel
@{
}
<div class="modal-window">
    <form onsubmit="return false" class="modal-form" id="modal-form" asp-controller="Home" asp-action="WorkerAdditional" method="post">
        <div class="modal-form-group">
            <p class="modal-form-title">
                Worker additional
            </p>
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Login of worker:
            </label>
            <input type="text" name="login" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Phone number:
            </label>
            <input type="text" name="phone" class="modal-form-input input" />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Email:
            </label>
            <input type="email" name="email" class="modal-form-input input" />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Position:
            </label>
            <select name="positionId" class="modal-form-input input">
                @for (int i = 0; i < Model.Positions.Count; i++)
                {
                    <option value="@Model.Positions[i].Id">@Model.Positions[i].Name</option>
                }
            </select>
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Role:
            </label>
            <select name="roleId" class="modal-form-input input">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <option value="@Model.Roles[i].Id">@Model.Roles[i].Name</option>
                }
            </select>
        </div>
        <div class="modal-form-group">
            <button type="submit" class="submit-btn" onclick="addChange(event)">Add / Change</button>
        </div>
        <div class="modal-form-group">
            <button type="submit" class="submit-btn" onclick="deleteAdd(event)">Delete additionals for user</button>
        </div>
        <input type="hidden" name="type" id="type" />
    </form>
</div>