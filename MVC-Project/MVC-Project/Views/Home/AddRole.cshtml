@model List<AppAccess>
@{
}

<style>
    .div-table-item-text {
        overflow: visible;
    }

    input[type=checkbox] {
        margin-right: 5px;
    }
</style>

<div class="modal-window">
    <form class="modal-form" asp-controller="Home" asp-action="AddRole" method="post">
        <div class="modal-form-group">
            <p class="modal-form-title">
                New role
            </p>
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Name:
            </label>
            <input type="text" name="name" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <div class="div-table-items">
                @{
                    int i = 0;
                    while (Model.Count > i)
                    {
                        <div class="div-table-item">
                            @for (int j = 0; j < 3; j++)
                            {
                                <div class="div-table-item-text">
                                    <input class="form-check-input" type="checkbox" name="accesses" value="@Model[i].Id" /> @Model[i].Name
                                </div>
                                i++;
                                if (Model.Count <= i)
                                {
                                    break;
                                }
                            }
                        </div>
                    }
                }
            </div>
        </div>
        <div class="modal-form-group">
            <button type="submit" class="submit-btn">Enter</button>
        </div>
    </form>
</div>